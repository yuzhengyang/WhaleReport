@model IEnumerable<WhaleReport.Models.DBModels.ReportModels.ReportDataSourceModel>

@{
    ViewBag.Title = "数据源";
}

<p class="text-center h4"><strong>数据源</strong></p>

<p class="text-right">
    @*@Html.ActionLink("+ 添加数据源", "Create", null, new { @class = "btn btn-primary" })*@
    @Html.Partial("Create", new WhaleReport.Models.DBModels.ReportModels.ReportDataSourceModel())
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ConnectionString)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ConnectionString)
                </td>*@
            <td>
                @Html.Partial("Edit", item)
                @*@Html.ActionLink("编辑", "Edit", new { id=item.Id }, new { @class = "btn btn-warning btn-xs" })*@
                @Html.Partial("Details", item)
                @*@Html.ActionLink("详情", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })*@
                @Html.Partial("Delete", item)
                @*@Html.ActionLink("删除", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })*@
            </td>
        </tr>
    }

</table>
