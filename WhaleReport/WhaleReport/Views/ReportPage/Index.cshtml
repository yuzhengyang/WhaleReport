@model IEnumerable<WhaleReport.Models.DBModels.ReportModels.ReportPageModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("Create", new WhaleReport.Models.DBModels.ReportModels.ReportPageModel())
    @*@Html.ActionLink("+ 添加报表", "Create", null, new { @class = "btn btn-primary" })*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.Partial("Edit", item)
                @*@Html.ActionLink("编辑", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })*@
                @Html.ActionLink("详情", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                @*@Html.ActionLink("预览", "Preview", new { id = item.Id }, new { @class = "btn btn-info btn-xs" })*@
                <a class="btn btn-info btn-xs" href="ReportPage/Preview/@(item.Id)" target="_blank">预览</a>
                @*@Html.ActionLink("删除", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })*@
                @Html.Partial("Delete", item)
            </td>
        </tr>
    }

</table>